{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "i18n": {
      "projectType": "application",
      "i18n": {
        "sourceLocale": "en-US",
        "locales": {
          "ml": {
            "translation": "src/locale/messages.ml.xlf",
            "baseHref": ""
          },
          "ka": {
            "translation": "src/locale/messages.ka.xlf",
            "baseHref": ""
          },
          "tl": {
            "translation": "src/locale/messages.tl.xlf",
            "baseHref": ""
          },
          "tm": {
            "translation": "src/locale/messages.tm.xlf",
            "baseHref": ""
          },
          "hi": {
            "translation": "src/locale/messages.hi.xlf",
            "baseHref": ""
          }
        }
      },
      "schematics": {
        "@schematics/angular:class": {
          "skipTests": true
        },
        "@schematics/angular:component": {
          "skipTests": true
        },
        "@schematics/angular:directive": {
          "skipTests": true
        },
        "@schematics/angular:guard": {
          "skipTests": true
        },
        "@schematics/angular:interceptor": {
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "skipTests": true
        },
        "@schematics/angular:resolver": {
          "skipTests": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
         
          "options": {
            "outputPath": "dist/i18n",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "tsconfig.app.json",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.css"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all"
            },
            "ml" : {
              "localize": ["ml"],
              "outputPath": "dist/under-construction-ml/",
              "i18nMissingTranslation": "error"
            },
            "ka": {
              "localize": ["ka"],
              "outputPath": "dist/under-construction-ka/",
              "i18nMissingTranslation": "error"
            },
            "tl": {
              "localize": ["tl"],
              "outputPath": "dist/under-construction-tl/",
              "i18nMissingTranslation": "error"
            },
            "tm": {
              "localize": ["tm"],
              "outputPath": "dist/under-construction-tm/",
              "i18nMissingTranslation": "error"
            },
            "hi": {
              "localize": ["hi"],
              "outputPath": "dist/under-construction-hi/",
              "i18nMissingTranslation": "error"
            },
            
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "i18n:build:production"
            },
            "ml": {
              "browserTarget": "i18n:build:ml"
            },
            "tl": {
              "browserTarget": "i18n:build:tl"
            },
            "ka": {
              "browserTarget": "i18n:build:ka"
            },
            "tm": {
              "browserTarget": "i18n:build:tm"
            },
            "hi": {
              "browserTarget": "i18n:build:hi"
            },
            "development": {
              "browserTarget": "i18n:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "i18n:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "tsconfig.spec.json",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.css"
            ],
            "scripts": []
          }
        }
      }
    }
  }
}